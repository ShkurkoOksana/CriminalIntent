<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/crimeTitleRequiredPolice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/handcuffs"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/crimeDateRequiredPolice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crimeTitleRequiredPolice"
        app:layout_constraintRight_toLeftOf="@id/handcuffs"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"/>

    <ImageView
        android:id="@+id/handcuffs"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/handcuffs" />

</androidx.constraintlayout.widget.ConstraintLayout>